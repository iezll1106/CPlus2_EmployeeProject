{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run in Terminal",
      "type": "shell",
      "command": "/c/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "&&",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "shell": {
          "executable": "C:\\msys64\\usr\\bin\\bash.exe",
          "args": ["-c"]
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
